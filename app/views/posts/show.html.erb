<h1><%= @post.author %></h1>
<h1><%= @post.title %></h1>
<h1><%= @post.content %></h1>

<br><br>

<h3>Tags:</h3>
<% @post.tags.each do |tag| %>
   <%= link_to tag.tag_name, post_tag_path(@post, tag) %>

  <%= link_to "Delete this tag", post_tag_path(@post, tag),
                           :data => {:confirm => "You an Admin? Fo' real?",
                                     :method => "delete"} %>
<% end %>
<br>
<%= link_to 'Add a tag', new_post_tag_path(@post) %>
<br>

<p><%= link_to "Edit", edit_post_path(@post) %></p>
<p><%= link_to "Delete", post_path(@post),
                         :data => {:confirm => "You an Admin? Fo' real?",
                                   :method => "delete"} %></p>

<p><%= link_to "Return to posts", posts_path %></p>
